
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'jdoe@example.com', :"data-required" => "true", :"data-notblank" => "true", :"data-type" => "email" %><br /></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => 'min. 6 characters', :"data-required" => "true", :"data-notblank" => "true", :"data-minlength" => "6" %><br /></div><br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), data: {validate: 'parsley'}, :html => {:novalidate => "novalidate"}) do |f| %>

<fieldset>
  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => 'jdoe@example.com', :"data-required" => "true", :"data-notblank" => "true", :"data-type" => "email" %><br /></div><br />

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => 'Email' %><br /></div><br />

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>

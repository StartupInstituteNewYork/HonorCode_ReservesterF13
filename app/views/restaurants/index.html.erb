<%- model_class = Restaurant -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>




<div class="container-fluid">
	
	<div class="row">

          <% @restaurants.each do |restaurant| %>
		    <div class="restaurant-wrap">	   			
		       <div class="col-lg-2 col-md-1 col-xs-6 thumb">
			
		         <div class="thumbnail">
		           <%= link_to (image_tag restaurant.image_url(:thumb).to_s), restaurant_path(restaurant) %>		    
		           <div class="caption">
			         <em><%= restaurant.description %></em>
                   </div>
			     </div>
               
			     <div class="thumbnail">
				   <div class="caption">
		             <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>		        
			         <%= restaurant.address1 %> <%= restaurant.address2 %>
		             <p><%= restaurant.city %>, <%= restaurant.state %> <%= restaurant.zip %></p>
		             <p><b>Proprietor:</b> <%= restaurant.owner.name %></p>
		           </div>		    		    	 	    
		         </div>
		      </div>
            </div>
          <% end %>

    </div>
</div>

	    
	    <% if false %>
	    <%= restaurant.owner(:name) %></br>      
        <div>
	      <% if owner_signed_in? && restaurant.owner == current_owner %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_path(restaurant), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_path(restaurant),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </div>
        <% end %>


<% if owner_signed_in? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_path,
            :class => 'btn btn-primary' %>
<% end %>

<%- model_class = Restaurant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.human_attribute_name(@restaurant.name).titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dd><%= @restaurant.description %></dd></br>


  <dd><%= image_tag @restaurant.image_url(:masthead).to_s %></dd></br>

  <dt><strong><%= model_class.human_attribute_name(:address1) %>:</strong></dt>
  <dd><%= @restaurant.address1 %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:address2) %>:</strong></dt>
  <dd><%= @restaurant.address2 %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @restaurant.city %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @restaurant.state %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
  <dd><%= @restaurant.zip %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @restaurant.phone %></dd></br>

  <dt><strong><%= model_class.human_attribute_name(:menu) %>:</strong></dt>
  <dd><%= @restaurant.menu %></dd></br>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  
  <% if owner_signed_in? %>
    <dd><%= @owner.name %></dd></br>
  <% else %>
    <dd><%= @restaurant.owner_id %></dd></br>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              restaurants_path, :class => 'btn'  %>

  <% if owner_signed_in? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>

</div>

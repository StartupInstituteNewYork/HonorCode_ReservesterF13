<%- model_class = Restaurant -%>
<div class="container-fluid">
	

	
	<div class="row">
	   <div class="restaurant-wrap">
		  <div class="col-lg-4 col-md-2 col-xs-6 thumb">
			<div class="thumbnail">
				<div class="info-text">
	               <h1><%=t '.title', :default => model_class.human_attribute_name(@restaurant.name).titleize %></h1>
	              
	            </div>
		      </div>
           </div>
	   </div>
          
		    <div class="restaurant-wrap-show">	   			
		       <div class="col-lg-2 col-md-1 col-xs-6 thumb">
				<div class="thumbnail">
				   <div class="title-caption">
		             <h4><em><%= @restaurant.description %></em></h4>
			       </div>
                </div>
		        <%= image_tag @restaurant.image_url(:masthead).to_s %>		    

			  
               
			     <div class="thumbnail">
				   <div class="caption">
		             <h3><%= @restaurant.name %></h3>		        
			         <%= @restaurant.address1 %> <%= @restaurant.address2 %>
		             <p><%= @restaurant.city %>, <%= @restaurant.state %> <%= @restaurant.zip %></p>
		             <p><b>Proprietor:</b> <%= @restaurant.owner.name %></p>
		           </div>		    		    	 	    
		         </div>
		      </div>
            </div>
    </div>



</div>




<div class="form-actions">
              <%= link_to t('.back', :default => t("helpers.links.back")), restaurants_path, :class => 'btn'  %>

			  <% if owner_signed_in? && @restaurant.owner == current_owner %>
			    <%= link_to t('.edit', :default => t("helpers.links.edit")),
			              edit_restaurant_path(@restaurant), :class => 'btn' %>
			    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
			              restaurant_path(@restaurant),
			              :method => 'delete',
			              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
			              :class => 'btn btn-danger' %>
			 <% end %>

</div>


  <% if owner_signed_in? && @restaurant.owner == current_owner %>
  <% else %>
    <div class="form-actions">
      <h5>Make a reservation!</h5>
      <%= render 'reservation_form' %>
    </div>
  <% end %>



